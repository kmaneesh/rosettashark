{
  "name": "reShark Analysis Lab",
  "build": {
    "dockerfile": "../labs/Dockerfile.pcap",
    "context": ".."
  },
  // 1. Tell VS Code WHERE to go when it opens the container
  "workspaceFolder": "/reShark",
  // 2. Tell Docker WHERE to mount your local files
  "workspaceMount": "source=${localWorkspaceFolder},target=/reShark,type=bind,consistency=cached",
  "customizations": {
    "vscode": {
      "extensions": [
        "saoudrizwan.claude-dev", // Claude Dev
        "ms-python.python",
        "tamasfe.even-better-toml",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "yzhang.markdown-all-in-one",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "github.copilot.enable": {
          "*": false,
          "plaintext": false,
          "markdown": false,
          "python": false
        },
        "cline.apiProvider": "openailike",
        "cline.openAiLike.baseUrl": "http://100.124.59.111:1234/v1",
        "cline.openAiLike.apiKey": "lm-studio",
        "cline.openAiLike.modelId": "qwen/qwen2.5-coder-14b",
        "cline.autoApproval": false,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.rulers": [
          88,
          120
        ],
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/*.pyc": true
        }
      }
    }
  },
  "mounts": [
    // Mounting the "Books" as Read-Write
    "source=${localWorkspaceFolder}/books/rulebook,target=/workspace/rulebook,type=bind",
    "source=${localWorkspaceFolder}/books/cookbook,target=/workspace/cookbook,type=bind",
    "source=${localWorkspaceFolder}/books/notebook,target=/workspace/notebook,type=bind",
    "source=${localWorkspaceFolder}/pcaps,target=/workspace/pcaps,type=bind,readonly"
  ],
  "remoteUser": "reshark",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "reshark",
      "userUid": "1000",
      "userGid": "1000"
    }
  }
}